{
  "name": "theme",
  "version": "1.0.0",
  "description": "WordPress starter theme with Tailwind, PostCSS, Laravel Mix and WordPress Scripts",
  "main": "index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run watch\" \"npm run start:blocks\"",
    "start:blocks": "wp-scripts start --webpack-src-dir=src/blocks --output-path=build/blocks",
    "watch": "mix watch",
    "build": "mix && npm run build:blocks",
    "build:production": "mix --production && npm run build:blocks",
    "build:blocks": "wp-scripts build --webpack-src-dir=src/blocks --output-path=build/blocks",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "format:js": "wp-scripts format-js"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwind"
  ],
  "author": "",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@wordpress/blocks": "^15.0.0",
    "@wordpress/components": "^30.0.0",
    "@wordpress/element": "^6.27.0",
    "@wordpress/i18n": "^6.0.0",
    "@wordpress/scripts": "^26.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.0",
    "laravel-mix": "^6.0.49",
    "postcss": "^8.4.24",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.2"
  },
  "dependencies": {}
}